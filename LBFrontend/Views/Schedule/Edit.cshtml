@model LBDataModel.Schedule

@{
    ViewBag.Title = "Edit schedule";
}

<h2>@ViewBag.Title</h2>

<div class="display-label">
    @Html.DisplayNameFor(model => model.BackupTask.Machine.IpAdress)
</div>
<div class="display-field">
    @ViewBag.BackupTask.Machine.IpAdress
</div>
<div class="display-label">
    @Html.DisplayNameFor(model => model.BackupTask.SourceFolder)
</div>
<div class="display-field">
    @ViewBag.BackupTask.SourceFolder
</div>
<div class="display-label">
    @Html.DisplayNameFor(model => model.BackupTask.DestFolder)
</div>
<div class="display-field">
    @ViewBag.BackupTask.DestFolder
</div>
<br/>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Schedule</legend>

        @Html.HiddenFor(model => model.ScheduleId)
        @Html.Hidden("BackupTaskId", (object)ViewBag.BackupTask.BackupTaskId.ToString())

        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Time)
            @Html.ValidationMessageFor(model => model.Time)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
