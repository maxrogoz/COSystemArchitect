@model IEnumerable<LBDataModel.BackupTask>

@{
    ViewBag.Title = "List of backup tasks";

    var machine = ((LBDataModel.Machine)ViewData["Machine"]);
}

<h2>Backup tasks for the machine</h2>

<p>
    @Html.DisplayNameFor(model => model.Machine.IpAdress)
    @machine.IpAdress
</p>

<p>
    @Html.ActionLink("Create New", "Create", new { id=machine.MachineId }) |
    @Html.ActionLink("Back to the list of machines", "Index", "Machine", null, null)
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SourceFolder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SourceUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestFolder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SourceFolder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SourceUser.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestFolder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestUser.Name)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.Disabled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BackupTaskId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BackupTaskId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BackupTaskId }) |
            @Html.ActionLink("Configure schedules", "Index", "Schedule", new { id=item.BackupTaskId }, null)
        </td>
    </tr>
}

</table>
